<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <Button
        android:id="@+id/about_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="About" />


    <Button
        android:id="@+id/feedback_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/about_button"
        android:text="Feedback" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/feedback_button"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="FAQs" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cardView">

        <RelativeLayout
            android:id="@+id/item_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_insert_drive_file_black_24dp"
            />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/FAQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toRightOf="@id/imageView2"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/FAQ1_Title"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/FAQ1_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toRightOf="@id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/FAQ1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:textSize="15dp"
            android:textColor="@android:color/darker_gray"
            android:text="@string/FAQ1_Description" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="14dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        tools:ignore="NotSibling"
        android:id="@+id/cardView2">

        <RelativeLayout
            android:id="@+id/item_card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_insert_drive_file_black_24dp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/FAQ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toRightOf="@id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/FAQ1_Description"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:textSize="15dp"
            android:textColor="@android:color/darker_gray"
            android:text="@string/FAQ2_Title"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/FAQ2_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toRightOf="@id/imageView3"
            android:layout_below="@+id/FAQ2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:textSize="15dp"
            android:textColor="@android:color/darker_gray"
            android:text="@string/FAQ2_Description"
            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView2"
        android:layout_marginTop="16dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        tools:ignore="NotSibling">

        <RelativeLayout
            android:id="@+id/item_card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/ic_insert_drive_file_black_24dp"
                />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/FAQ3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView4"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/FAQ2_Description"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:textSize="15dp"
            android:textColor="@android:color/darker_gray"
            android:text="@string/FAQ3_Title"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/FAQ3_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/FAQ3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:textSize="15dp"
            android:textColor="@android:color/darker_gray"
            android:text="@string/FAQ3_Description"
             />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>